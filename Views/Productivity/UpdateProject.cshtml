@model NetProductivity.Models.Project

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    <link href="~/css/register-page.css" rel="stylesheet" type="text/css" />
}

@*<head>
        <script src="~/js/register.js" type="text/javascript"></script>
    </head>*@
<form asp-controller="Productivity" asp-action="UpdateProject" method="post">
    <h2>Create project</h2>
    <div>
        <p>
            <label for="Name" class="floatLabel">Name</label><br />
            <input id="Name" name="Name" type="text" />
            <span asp-validation-for="Name" id="mySpan">Write down the name of your project</span>
        </p>
    </div>
    <div>
        <p>
            <input type="submit" value="Update Project" id="submit" />
        </p>
    </div>
</form>
<script>
    var name = document.getElementById('Name');
    var div = document.getElementById('mySpan');
    div.style.display = 'none';
    if (name.value.length < 4) {
        div.style.display = 'block';
    }
</script>
