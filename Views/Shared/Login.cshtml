@model NetProductivity.Models.Login

@{
    ViewData["Title"] = "Login";
    <link href="~/css/login.css" rel="stylesheet" type="text/css" />
}

<div class="container">

    <form method="post" asp-controller="Register" asp-action="Login"
          asp-route-returnUrl="@Model.ReturnUrl">

        <h1>Log in</h1>
        <div class="inset">
            <p>
                <label for="Email">EMAIL ADDRESS</label>
                <input type="text" name="Email" id="Email">
            </p>
            <p>
                <label for="Password">PASSWORD</label>
                <input type="password" name="Password" id="Password">
            </p>
            <p>
                <input type="checkbox" name="RememberMe" id="RememberMe">
                <label for="RememberMe">Remember me</label>
            </p>
        </div>
        <p class="p-container">
            <a asp-controller="Register" asp-action="Register">Don't have an account?</a>
            <input type="submit" value="Log in" asp-controller="Register" asp-action="Login">
        </p>

    </form>

</div>
